<%= simple_form_for([@exam,@question,@question.answers.build]) do |f| %>
  <div class="form-group">
      <%= f.text_area :title , :class => "form-control", placeholder: "Formulate Your Answer"  %> <br>
      <%= f.select(:correct, options_for_select([['True', true], ['False', false]]), {include_blank: "Answer Status"} ,{ :class => 'form-control' })  %> <br>
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= link_to "Cancel" , @exam , :class => "btn btn-primary" %>
  </div>
<% end %>
