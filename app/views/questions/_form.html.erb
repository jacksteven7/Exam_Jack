<%= simple_form_for([@exam,@exam.questions.build]) do |f| %>

  <div class="form-group">
      <%= f.text_area :title , :class => "form-control", placeholder: "Formulate Your Question"  %> <br>
      <%= select_tag(:type, options_for_select([['Multiple Answer Question', 1], ['Single Answer Questions ', 2]]) , :class => "form-control" )  %> <br>
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= link_to "Cancel" , root_path , :class => "btn btn-primary" %>
  </div>
<% end %>
