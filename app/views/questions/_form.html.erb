<%= simple_form_for([@exam,@exam.questions.build]) do |f| %>

  <div class="form-group">
      <%= f.text_area :title , :class => "form-control", placeholder: "Formulate Your Question"  %> <br>
      <%= f.select(:type, options_for_select([['Multiple Answer', 1], ['Single Answer', 2]]), {} ,{ :class => 'form-control' })  %> <br>
      <%= f.submit nil, :class => "btn btn-primary",:onclick => 'closePopupDelay()' %>
      <%= link_to "Cancel" , root_path , :class => "btn btn-primary",:onclick => 'closePopup()'  %>
  </div>
<% end %>
