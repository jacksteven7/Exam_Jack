<p id="notice"><%= notice %></p>

<h1>
  <%= @exam.title %>
   <div class="btn btn-group">
	<%= link_to 'Destroy', @exam, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-xs btn-primary" %>
	<%= link_to 'Edit', edit_exam_path(@exam) , :class => "btn btn-xs btn-primary" %>
	<%= link_to 'Back', exams_path , :class => "btn btn-xs btn-primary" %>
	</div>

</h1>

<p>
  <%= @exam.description %>
</p>


<%= simple_form_for([@exam,@question]) do |f| %>

  <div class="form-group">
      <%= f.text_area :title , :class => "form-control", placeholder: "Formulate Your Question"  %> <br>
      <%= f.select(:type, options_for_select([['Multiple Answer Question', 1], ['Single Answer Questions ', 2]]), {include_blank: "Select a Type"} ,{ :class => 'form-control' })  %> <br>
      <%= f.submit nil, :class => "btn btn-primary" %>
      <%= link_to "Cancel" , root_path , :class => "btn btn-primary" %>
  </div>
<% end %>
