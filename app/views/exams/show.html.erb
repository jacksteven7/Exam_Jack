<p id="notice"><%= notice %></p>

<h1>
  <%= @exam.title %>
   <div class="btn btn-group">
	<%= link_to 'Destroy', @exam, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-xs btn-primary" %>
	<%= link_to 'Edit', edit_exam_path(@exam) , :class => "btn btn-xs btn-primary" %>
	<%= link_to 'Back', exams_path , :class => "btn btn-xs btn-primary" %>
	</div>

</h1>

<p>
  <%= @exam.description %>
</p>



<h3>Questions
	<%= link_to image_tag("add.png", size: "30x30", alt: "Add Question"), new_exam_question_path(@exam), :class => "submit_button", :onclick => 'return openPopup(this);' %>
</h3>

<br>
<table class="table">
	<%= render @exam.questions %>
</table>

